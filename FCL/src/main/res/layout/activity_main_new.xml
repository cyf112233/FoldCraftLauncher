<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".activity.MainActivity">

    <!-- 动态背景 -->
    <com.tungsten.fcllibrary.component.view.FCLDynamicBackground
        android:id="@+id/dynamic_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 主内容区域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- 顶部状态栏 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_status_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/glass_white"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- 应用标题 -->
                <com.tungsten.fcllibrary.component.view.FCLTextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 版本信息 -->
                <com.tungsten.fcllibrary.component.view.FCLTextView
                    android:id="@+id/version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/app_version"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@id/app_title"
                    app:layout_constraintStart_toEndOf="@id/app_title"
                    app:layout_constraintTop_toTopOf="@id/app_title" />

                <!-- 网络状态 -->
                <com.tungsten.fcllibrary.component.view.FCLImageView
                    android:id="@+id/network_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_network_online"
                    app:layout_constraintEnd_toStartOf="@id/theme_toggle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/online_green" />

                <!-- 主题切换按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/theme_toggle"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_theme_dark"
                    app:icon="@drawable/ic_theme_dark"
                    app:iconTint="@color/text_primary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 左侧导航菜单 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/left_nav_card"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/glass_white"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_status_card"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- 主页按钮 -->
                <com.tungsten.fcllibrary.component.view.FCLNavButton
                    android:id="@+id/nav_home"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_home_modern"
                    android:text="@string/nav_home"
                    app:iconColor="@color/nav_icon_active"
                    app:textColor="@color/nav_text_active" />

                <!-- 管理按钮 -->
                <com.tungsten.fcllibrary.component.view.FCLNavButton
                    android:id="@+id/nav_manage"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_manage_modern"
                    android:text="@string/nav_manage"
                    app:iconColor="@color/nav_icon_inactive"
                    app:textColor="@color/nav_text_inactive" />

                <!-- 下载按钮 -->
                <com.tungsten.fcllibrary.component.view.FCLNavButton
                    android:id="@+id/nav_download"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_download_modern"
                    android:text="@string/nav_download"
                    app:iconColor="@color/nav_icon_inactive"
                    app:textColor="@color/nav_text_inactive" />

                <!-- 控制器按钮 -->
                <com.tungsten.fcllibrary.component.view.FCLNavButton
                    android:id="@+id/nav_controller"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_controller_modern"
                    android:text="@string/nav_controller"
                    app:iconColor="@color/nav_icon_inactive"
                    app:textColor="@color/nav_text_inactive" />

                <!-- 设置按钮 -->
                <com.tungsten.fcllibrary.component.view.FCLNavButton
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_settings_modern"
                    android:text="@string/nav_settings"
                    app:iconColor="@color/nav_icon_inactive"
                    app:textColor="@color/nav_text_inactive" />

                <!-- 底部空间 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- 返回按钮 -->
                <com.tungsten.fcllibrary.component.view.FCLNavButton
                    android:id="@+id/nav_back"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_back_modern"
                    android:text="@string/nav_back"
                    app:iconColor="@color/nav_icon_inactive"
                    app:textColor="@color/nav_text_inactive" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 中央内容区域 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/content_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/glass_white"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/right_panel_card"
            app:layout_constraintStart_toEndOf="@id/left_nav_card"
            app:layout_constraintTop_toBottomOf="@id/top_status_card"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="1dp">

            <!-- UI内容容器 -->
            <com.tungsten.fcllibrary.component.view.FCLUILayout
                android:id="@+id/ui_content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- 右侧面板 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/right_panel_card"
            android:layout_width="320dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/glass_white"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_status_card"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="1dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 后端选择器 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@color/glass_secondary"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <com.tungsten.fcllibrary.component.view.FCLTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:text="@string/backend_selector"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <com.google.android.material.button.MaterialButtonToggleGroup
                                android:id="@+id/backend_toggle_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:singleSelection="true">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/backend_pojav"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/backend_pojav"
                                    app:icon="@drawable/ic_pojav"
                                    style="@style/Widget.Material3.Button.OutlinedButton" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/backend_boat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/backend_boat"
                                    app:icon="@drawable/ic_boat"
                                    style="@style/Widget.Material3.Button.OutlinedButton" />

                            </com.google.android.material.button.MaterialButtonToggleGroup>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 账户信息卡片 -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/account_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/glass_secondary"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:rippleColor="@color/ripple_color">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <!-- 账户头像 -->
                            <com.tungsten.fcllibrary.component.view.FCLImageView
                                android:id="@+id/account_avatar"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:background="@drawable/bg_avatar_glow"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- 账户名称 -->
                            <com.tungsten.fcllibrary.component.view.FCLTextView
                                android:id="@+id/account_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="@string/account_state_no_account"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/account_avatar"
                                app:layout_constraintTop_toTopOf="@id/account_avatar" />

                            <!-- 账户状态 -->
                            <com.tungsten.fcllibrary.component.view.FCLTextView
                                android:id="@+id/account_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginTop="4dp"
                                android:text="@string/account_state_add"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/account_avatar"
                                app:layout_constraintTop_toBottomOf="@id/account_name" />

                            <!-- 编辑图标 -->
                            <com.tungsten.fcllibrary.component.view.FCLImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_edit"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/account_avatar"
                                app:tint="@color/text_secondary" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 启动按钮 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@color/glass_secondary"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- 启动按钮 -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/launch_button"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginBottom="12dp"
                                android:text="@string/launch_game"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                app:cornerRadius="12dp"
                                app:icon="@drawable/ic_play_modern"
                                app:iconGravity="textStart"
                                app:iconSize="24dp"
                                style="@style/Widget.Material3.Button" />

                            <!-- 版本信息 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.tungsten.fcllibrary.component.view.FCLImageView
                                    android:id="@+id/version_icon"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/ic_version"
                                    app:tint="@color/text_secondary" />

                                <com.tungsten.fcllibrary.component.view.FCLTextView
                                    android:id="@+id/version_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/no_version_selected"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp" />

                                <com.tungsten.fcllibrary.component.view.FCLProgressBar
                                    android:id="@+id/version_progress"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 快捷操作按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/version_manage_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/manage_version"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_version_manage"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/jar_execute_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="@string/jar_execute"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_jar"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 